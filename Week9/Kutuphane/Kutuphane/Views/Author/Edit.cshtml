@using Kutuphane.Models
@model Author

<div class="container d-flex justify-content-center mt-5">
    <div class="card p-4 shadow-lg" style="width: 40rem; border-radius: 15px; background: #ffffff;">
        <h2 class="text-center mb-4" style="color: #34495E; font-weight: bold;">✍️ Yazar Düzenle</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="FirstName" class="form-label"><i class="fas fa-user"></i> Adı</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" placeholder="Yazarın adını girin" required />
            </div>

            <div class="form-group mb-3">
                <label for="LastName" class="form-label"><i class="fas fa-user-tag"></i> Soyadı</label>
                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" placeholder="Yazarın soyadını girin" required />
            </div>

            <div class="form-group mb-4">
                <label for="DateOfBirth" class="form-label"><i class="fas fa-calendar-alt"></i> Doğum Tarihi</label>
                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("List", "Author")" class="btn btn-danger shadow-lg px-4 py-2 fw-bold">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
                <button type="submit" class="btn btn-success shadow-lg px-5 py-2 fw-bold">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        font-family: 'Arial', sans-serif;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.5);
        }

    .btn {
        border-radius: 30px;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    h2 {
        font-size: 32px;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
    }
</style>

<!-- Font Awesome Kütüphanesi -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
