@using Kutuphane.Models
@model Book

<div class="container d-flex justify-content-center mt-5">
    <div class="card p-4 shadow-lg" style="width: 40rem; border-radius: 15px; background: #ffffff;">
        <h2 class="text-center mb-4" style="color: #34495E; font-weight: bold;">
            ✏️ Kitap Düzenle
        </h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="Title" class="form-label text-primary fw-bold">
                    <i class="fas fa-book"></i> Başlık
                </label>
                <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
            </div>

            <div class="form-group mb-3">
                <label for="AuthorId" class="form-label text-primary fw-bold">
                    <i class="fas fa-user"></i> Yazar ID
                </label>
                <input type="number" class="form-control" id="AuthorId" name="AuthorId" value="@Model.AuthorId" required />
            </div>

            <div class="form-group mb-3">
                <label for="Genre" class="form-label text-primary fw-bold">
                    <i class="fas fa-layer-group"></i> Tür
                </label>
                <input type="text" class="form-control" id="Genre" name="Genre" value="@Model.Genre" required />
            </div>

            <div class="form-group mb-3">
                <label for="PublishDate" class="form-label text-primary fw-bold">
                    <i class="fas fa-calendar-alt"></i> Yayın Tarihi
                </label>
                <input type="date" class="form-control" id="PublishDate" name="PublishDate" value="@Model.PublishDate.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="form-group mb-3">
                <label for="ISBN" class="form-label text-primary fw-bold">
                    <i class="fas fa-barcode"></i> ISBN
                </label>
                <input type="text" class="form-control" id="ISBN" name="ISBN" value="@Model.ISBN" required />
            </div>

            <div class="form-group mb-3">
                <label for="CopiesAvailable" class="form-label text-primary fw-bold">
                    <i class="fas fa-copy"></i> Mevcut Kopyalar
                </label>
                <input type="number" class="form-control" id="CopiesAvailable" name="CopiesAvailable" value="@Model.CopiesAvailable" required />
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success px-4 py-2 fw-bold shadow-lg">
                    <i class="fas fa-save"></i> Kaydet
                </button>
                <a href="@Url.Action("List", "Book")" class="btn btn-secondary px-4 py-2 fw-bold shadow-lg ms-2">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        font-family: 'Arial', sans-serif;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
