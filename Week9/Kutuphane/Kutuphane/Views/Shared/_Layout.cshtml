<html xmlns="http://www.w3.org/1999/xhtml">
<head>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

	<title>Kütüphane Yönetim Sistemi</title>

</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
            <!-- Kütüphane Yönetim Sistemi başlığı -->
            <a class="navbar-brand fw-bold text-primary" href="/">Kütüphane Yönetim Sistemi</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Ortalanmış Menü -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/" aria-current="page">HOME PAGE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/home/about">ABOUT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/author/list">AUTHOR</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold text-dark" href="/book/list">BOOK</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- CSS (For Simplicity & Hover Effects) -->
    <style>
        /* Navbar Hover Effects */
        .navbar-nav .nav-link {
            transition: color 0.3s ease, background-color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff !important;
                background-color: rgba(0, 123, 255, 0.1);
                border-radius: 5px;
            }

            /* Active Link Styling */
            .navbar-nav .nav-link.active {
                color: #007bff !important;
            }

        /* Navbar düzenleme */
        .navbar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Menüyü Ortalamak */
        .navbar-nav {
            display: flex;
            justify-content: center;
            width: 100%;
        }

        /* Navbar başlığını sabit tutma */
        .navbar-brand {
            white-space: nowrap; /* Başlığın taşmasını engelle */
            flex-shrink: 0; /* Başlığın küçülmesini engelle */
        }
    </style>

    <!-- Optional: You can use JavaScript to highlight the active page -->
    <script>
        $(document).ready(function () {
            var path = window.location.pathname;
            $('.navbar-nav .nav-link').each(function () {
                if ($(this).attr('href') === path) {
                    $(this).addClass('active');
                }
            });
        });
    </script>





    <!-- Bootstrap JS (Dropdown ve diğer bileşenler için) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Dosya Konumu -->

    <div class="view-path-container">
        <p>📂 Şu an görüntülenen View:</p>
        <span class="view-path">@ViewContext.View.Path</span>
    </div>

    <style>
        .view-path-container {
            background-color: #f8f9fa; /* Hafif gri arka plan */
            border-left: 5px solid #007bff; /* Sol taraf mavi çizgi */
            padding: 10px 15px;
            font-family: 'Courier New', Courier, monospace;
            font-size: 16px;
            border-radius: 5px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
            margin: 15px 0;
        }

        .view-path {
            color: #d63384; /* Pembe/mor tonlarında renk */
            font-weight: bold;
        }
    </style>



	@RenderBody()

    <!-- Footer kısmı -->

    <footer class="bg-primary text-white text-center py-3 fixed-bottom">
        © 2025 Tüm Hakları Saklıdır | Erkan KARADAĞ
    </footer>
</body>
</html>